ALTER TABLE t1
ADD COLUMN `c1` TEXT default '' 
ADTER 'prev_column`;

ALTER TABLE t1 DROP COLUMN column_name;

CREATE TABLE t1 (
    id INTEGER(11) AUTO_INCREMENT,
    name VARCHAR(255) NOT NULL,
    PRIMARY KEY (id)
);

